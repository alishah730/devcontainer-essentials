{
  "id": "java-node",
  "version": "1.0.0",
  "name": "Java and Node.js",
  "description": "Install Java (8-latest) and Node.js (10-latest) in your devcontainer",
  "documentationURL": "https://github.com/alishah730/all-devcontainer/tree/main/src/java-node",
  "licenseURL": "https://github.com/alishah730/all-devcontainer/blob/main/LICENSE",
  "keywords": [
    "java",
    "nodejs",
    "node",
    "jdk",
    "openjdk",
    "development"
  ],
  "options": {
    "javaVersion": {
      "type": "string",
      "enum": [
        "8",
        "11",
        "17",
        "21",
        "latest"
      ],
      "default": "17",
      "description": "Select the Java version to install"
    },
    "nodeVersion": {
      "type": "string",
      "enum": [
        "10",
        "12",
        "14",
        "16",
        "18",
        "20",
        "latest",
        "lts"
      ],
      "default": "lts",
      "description": "Select the Node.js version to install"
    },
    "installMaven": {
      "type": "boolean",
      "default": true,
      "description": "Install Apache Maven for Java project management"
    },
    "installGradle": {
      "type": "boolean",
      "default": false,
      "description": "Install Gradle for Java project management"
    },
    "installYarn": {
      "type": "boolean",
      "default": true,
      "description": "Install Yarn package manager for Node.js"
    }
  },
  "containerEnv": {
    "JAVA_HOME": "/usr/lib/jvm/java-${javaVersion}-openjdk-amd64",
    "NODE_PATH": "/usr/local/lib/node_modules"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  }
}
