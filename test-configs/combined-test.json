{
  "name": "Test Java + Node.js Combined",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "./src/java": {
      "version": "17",
      "installMaven": true,
      "installGradle": false
    },
    "./src/nodejs": {
      "version": "lts",
      "installYarn": true,
      "installPnpm": false
    }
  },
  "postCreateCommand": "echo 'Combined Java + Node.js container ready for testing'"
}
